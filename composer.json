{
  "name": "purdue/pantheon-wp-upstream",
  "type": "website",
  "description": "WordPress Setup for Pantheon",
  "license": "GPLv3",
  "authors": [
    {
      "name": "Purdue Marketing and Media",
      "email": "digital-marketing@groups.purdue.edu",
      "homepage": "https://brand.purdue.edu"
    }
  ],
  "minimum-stability": "stable",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://purdue.github.io"
    }
  ],
  "require": {
    "composer/installers": "^1.3.0",
    "johnpbloch/wordpress": "5.5.2",
    "psy/psysh" : "~0.6",
    "roots/wp-password-bcrypt": "~1.0.0",
    "roots/soil": "4.*",
    "rvtraveller/qs-composer-installer": "^1.1",
    "wpackagist-plugin/autodescription": "4.*",
    "wpackagist-plugin/duracelltomi-google-tag-manager": "1.11.*",
    "wpackagist-plugin/hyperdb":"1.7",
    "wpackagist-plugin/pantheon-advanced-page-cache": "1.*",
    "wpackagist-plugin/pantheon-hud": "0.3.*",
    "wpackagist-plugin/post-smtp": "2.*",
    "wpackagist-plugin/stream": "3.*",
    "wpackagist-plugin/wordpress-importer": "0.*",
    "wpackagist-plugin/wp-redis": "1.1.*",
    "wpackagist-plugin/wp-native-php-sessions": "1.*",
    "alquemie/alquemie-config": "0.1.*",
    "purdue/boilerup-wp": "1.3.1",
    "purdue/bulma-blocks": "1.4.0",
    "purdue/purdue-blocks": "1.13.0",
    "purdue/purdue-wp-theme": "1.4.0",
    "wpackagist-theme/twentytwenty":"1.*"
  },
  "config": {
    "vendor-dir": "vendor",
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.3"
    }
  },
  "extra": {
    "wordpress-install-dir": "web/cms",
    "installer-paths": {
      "web/app/mu-plugins/autodescription/": ["wpackagist-plugin/autodescription"],
      "web/app/mu-plugins/duracelltomi-google-tag-manager/": ["wpackagist-plugin/duracelltomi-google-tag-manager"],
      "web/app/mu-plugins/hyperdb/": ["wpackagist-plugin/hyperdb"],
      "web/app/mu-plugins/pantheon-advanced-page-cache/": ["wpackagist-plugin/pantheon-advanced-page-cache"],
      "web/app/mu-plugins/post-smtp/": ["wpackagist-plugin/post-smtp"],
      "web/app/mu-plugins/soil/": ["roots/soil"],
      "web/app/mu-plugins/stream/": ["wpackagist-plugin/stream"],
      "web/app/mu-plugins/wp-native-php-sessions/": ["wpackagist-plugin/wp-native-php-sessions"],
      "web/app/mu-plugins/wp-password-bcrypt/": ["roots/wp-password-bcrypt"],
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"],
      "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
    }
  }
}
